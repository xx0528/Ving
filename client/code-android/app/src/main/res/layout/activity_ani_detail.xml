<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:srlAccentColor="@android:color/white"
    app:srlEnableHeaderTranslationContent="false"
    app:srlEnableAutoLoadmore="false"
    app:srlPrimaryColor="@color/colorPrimary"
    android:id="@+id/mRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.scwang.smartrefresh.header.MaterialHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/mAniVideoView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/color_black"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mAniBackground"
            android:layout_below="@+id/mAniVideoView"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mAniVideoView"
            android:background="@color/color_light_black" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mRecyclerView"
            android:layout_below="@+id/mAniVideoView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_action_favorites"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324" />

            <TextView
                android:id="@+id/tv_action_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_action_share"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324" />

            <TextView
                android:id="@+id/tv_action_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_action_reply"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324" />

            <TextView
                android:id="@+id/tv_action_offline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_action_offline"
                android:gravity="center_vertical"
                android:text="@string/video_offline"
                android:textColor="@color/color_lighter_gray" />

        </LinearLayout>

    </RelativeLayout>

</com.scwang.smartrefresh.layout.SmartRefreshLayout>
